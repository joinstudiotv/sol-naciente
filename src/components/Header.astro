<script>
	const bbtn = document.getElementById("bbtn") as HTMLButtonElement;
	const clos = document.getElementById("close") as HTMLButtonElement;
	const head = document.querySelector(".mobile-nav") as HTMLElement;
	const body = document.querySelector('body') as HTMLElement;

  bbtn.addEventListener("click", () => {
		bbtn.classList.add('active')
		head.classList.add('active')
		body.classList.add('active')
	});

	clos.addEventListener("click", () => {
		bbtn.classList.remove('active')
		head.classList.remove('active')
		body.classList.remove('active')
	})

	const title = document.getElementById('title') as HTMLElement;
	const rect = title.getBoundingClientRect();

	document.addEventListener('mousemove', function(e) {
    // Coordenadas del mouse relativas al elemento
    const mouseX = e.clientX - rect.left;
    const mouseY = e.clientY - rect.top;

    // Normalizamos las coordenadas para obtener porcentajes
    const xPercent = (mouseX / rect.width) * 100;
    const yPercent = (mouseY / rect.height) * 100;

    // Actualizamos el estilo del gradiente
    title.style.background = `radial-gradient(circle farthest-side at ${xPercent}% ${yPercent}%, var(--yellow) 0%, var(--brown) 34%)`;
});
</script>

